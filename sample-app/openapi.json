{
  "$schema": "https://spec.openapis.org/oas/3.0/schema/2021-09-28",
  "openapi": "3.0.3",
  "info": {
    "title": "Heavyrain Sample",
    "description": "Heavyrain Sample PHP Application Schema",
    "license": {
      "name": "MIT"
    },
    "version": "0.0.1"
  },
  "paths": {
    "/": {
      "get": {
        "operationId": "GetIndex",
        "responses": {
          "default": {
            "description": "",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                },
                "example": "<!DOCTYPE html>Hello world."
              }
            }
          }
        }
      }
    },
    "/json": {
      "post": {
        "operationId": "PostJson",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "hello": {
                      "type": "string",
                      "example": "world."
                    },
                    "payload": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "hello",
                    "payload"
                  ]
                }
              }
            }
          },
          "default": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "error"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/users/{userId}": {
      "get": {
        "operationId": "GetUsers",
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "userId": {
                      "type": "integer",
                      "example": 1
                    },
                    "name": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "userId",
                    "name"
                  ]
                }
              }
            }
          },
          "404": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "User 1 not found"
                    }
                  },
                  "required": [
                    "error"
                  ]
                }
              }
            }
          },
          "default": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "error"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/posts": {
      "get": {
        "operationId": "GetPosts",
        "parameters": [
          {
            "in": "query",
            "name": "postId",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "postId": {
                      "type": "integer",
                      "example": 1
                    },
                    "content": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "postId",
                    "content"
                  ]
                }
              }
            }
          },
          "404": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Post not found"
                    }
                  },
                  "required": [
                    "error"
                  ]
                }
              }
            }
          },
          "default": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "error"
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
