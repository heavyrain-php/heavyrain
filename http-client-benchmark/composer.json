{
    "name": "il-m-yamagishi/heavyrain-php-benchmark",
    "description": "Heavyrain PHP Benchmark App",
    "type": "project",
    "license": "MIT",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Masaru Yamagishi",
            "email": "m-yamagishi@infiniteloop.co.jp"
        }
    ],
    "require": {
        "php": ">=8.1",
        "amphp/http-client": "^4.6",
        "guzzlehttp/guzzle": "^7.7",
        "guzzlehttp/psr7": "^2.5",
        "kriswallsmith/buzz": "^1.2",
        "laminas/laminas-diactoros": "^3.0",
        "laminas/laminas-http": "^2.18",
        "nyholm/psr7": "^1.8",
        "phpbench/phpbench": "^1.2",
        "react/async": "^4.0",
        "react/http": "^1.9",
        "slim/psr7": "^1.6",
        "symfony/http-client": "^6.2"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "bench-short": "phpbench run tests/Benchmark --report=aggregate --progress=dots --bootstrap=vendor/autoload.php",
        "bench": "phpbench run tests/Benchmark --report=aggregate --progress=dots --bootstrap=vendor/autoload.php --iterations=10",
        "bench-long": "phpbench run tests/Benchmark --report=aggregate --progress=dots --bootstrap=vendor/autoload.php --iterations=100"
    }
}