{
    "name": "il-m-yamagishi/heavyrain-php",
    "description": "Loadtest/Stresstest tool made with PHP",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "loadtest",
        "stresstest",
        "testing"
    ],
    "homepage": "https://github.com/il-m-yamagishi/heavyrain-php/",
    "support": {
        "issues": "https://github.com/il-m-yamagishi/heavyrain-php/issues",
        "source": "https://github.com/il-m-yamagishi/heavyrain-php/"
    },
    "bin": [
        "bin/heavyrain"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Masaru Yamagishi",
            "email": "akai_inu@live.jp"
        }
    ],
    "require": {
        "php": ">=8.1",
        "kriswallsmith/buzz": "^1.2",
        "laminas/laminas-diactoros": "^3.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0|^2.0",
        "slim/slim": "^4.11",
        "symfony/console": "^6.2",
        "symfony/process": "^6.2"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Heavyrain\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Heavyrain\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "test -f ./phive.phar || curl -fLO https://phar.io/releases/phive.phar",
            "php phive.phar install"
        ],
        "sample": "@php -S localhost:8081 -t sample-app/public",
        "build": "./tools/box compile",
        "psalm": "./tools/psalm",
        "cs": "./tools/php-cs-fixer fix .",
        "lint": [
            "@psalm",
            "@cs"
        ],
        "test": "./tools/phpunit --bootstrap=vendor/autoload.php --coverage-filter=src tests",
        "ci": [
            "@lint",
            "@test"
        ]
    }
}
